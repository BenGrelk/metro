@model Assignment4WebApp.ViewModels.Food.IndexViewModel;

@{
    ViewData["Title"] = "Food";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>title</title>
</head>
<body>
<div>
    <h1>Order List</h1>
    <div style="margin-top: 2%">
        <a asp-action="New">Create Order</a>
    </div>

    <div class="table" style="margin-top: 2%">
        <div class="table-head">
            <div class="table-cell">Order ID</div>
            <div class="table-cell">Order Total</div>
            <div class="table-cell">Beverage Item</div>
            <div class="table-cell">Appetizer Item</div>
            <div class="table-cell">Main Course Item</div>
            <div class="table-cell">Dessert Item</div>
            <div class="table-cell"></div>
        </div>
        <div class="table-body">
            @foreach (var order in Model.OrderList)
            {
                <div class="table-row">
                    <div class="table-cell">@order.OrderId</div>
                    <!-- format the price to 2 decimal places -->
                    <div class="table-cell">$@order.OrderTotal.ToString("F")</div>
                    <div class="table-cell">@order.BeverageItem</div>
                    <div class="table-cell">@order.AppetizerItem</div>
                    <div class="table-cell">@order.MainCourseItem</div>
                    <div class="table-cell">@order.DessertItem</div>

                    <!-- Edit and delete Button -->
                    <div class="table-cell">
                        <a asp-action="Edit" asp-route-id="@order.OrderId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
</body>
</html>